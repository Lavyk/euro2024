{{#> layout}}
{{#*inline "head"}}
<title>My Bets - {{@websiteName}}</title>
<style>
.not-betted {
    background-color: #e6ff99;
}
@keyframes pulse-success {
    0%, 100% { background-color: white; }
    30% { background-color: #76FF7A; }
}
.autosave-success {
    animation: pulse-success 1s;
}
@keyframes pulse-error {
    0%, 100% { background-color: white; }
    30% { background-color: #DC381F; }
}
.autosave-error {
    animation: pulse-error 1s;
}
</style>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<input type="hidden" name="_csrf" value="{{csrfToken}}">
<input type="hidden" name="_action" value="/save_bet">
<div class="container">

<h2>My Bets</h2>

{{#if (gt upcomingMatchesWithoutBet 0)}}
<div class="alert alert-warning">
    <strong>You should place bets for the upcoming matches!</strong>
</div>
{{/if}}

{{#each matches}}
<div class="row autosave mb-1 pb-1 border-bottom">
    <div class="col-md-2 col-6 order-1 small"><span class="d-none d-lg-inline">{{calendar starts_at}}</span><span class="d-lg-none">{{calendarShort starts_at}}</span></div>
    <div class="col-md-2 col-6 order-1 small text-right text-md-left">
        <span class="d-none d-lg-inline">{{match_type_name}}</span>
        <span class="d-lg-none">{{match_type_code}}</span>
        {{> score_factor match_type_score_factor}}
    </div>
    <div class="col-md-2 col-6 order-md-1 order-2 text-right">
        {{#if home_team_name}}
            <strong class="d-none d-sm-inline">{{home_team_name}}</strong><strong class="d-sm-none">{{home_team_code}}</strong>
        {{else}}
            <strong>{{placeholder_home}}</strong>
        {{/if}}
    </div>
    <div class="col-auto order-md-1 order-3 text-center m-auto m-md-0">
        <input type="number" min="0" max="20" autocomplete="off"
            {{#if (not has_teams)}}disabled{{/if}}
            class="form-control text-center {{#if (contains @upcomingMatchesWithoutBetIds id) }}not-betted{{/if}}"
            style="display:inline;width:80px;" name="home" value="{{bet_goals_home}}">
        <input type="hidden" name="match" value="{{id}}">
        :
        <input type="number" min="0" max="20" autocomplete="off"
            {{#if (not has_teams)}}disabled{{/if}}
            class="form-control text-center {{#if (contains @upcomingMatchesWithoutBetIds id) }}not-betted{{/if}}"
            style="display:inline;width:80px;" name="away" value="{{bet_goals_away}}">
    </div>
    <div class="col-md-2 col-6 order-md-1 order-2 text-left">
        {{#if away_team_name}}
            <strong class="d-none d-sm-inline">{{away_team_name}}</strong><strong class="d-sm-none">{{away_team_code}}</strong>
        {{else}}
            <strong>{{placeholder_away}}</strong>
        {{/if}}
    </div>
</div>
{{/each}}

</div>
{{/inline}}
{{#*inline "scripts"}}
<script type="text/javascript" src="/static/js/save_bets.js"></script>
{{/inline}}
{{/layout}}
