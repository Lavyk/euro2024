{{#> layout}}
{{#*inline "head"}}
<title>Past Matches - Euro 2016</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container">
{{#if matches}}
{{#each matches}}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title">{{hometeam}} <b>{{goalshome}}</b> : <b>{{goalsaway}}</b> {{awayteam}} ({{matchtype}}) {{> score_factor score_factor}}
            <small class="pull-right">{{calendar when}}</small>
        </h2>
    </div>
    <div class="panel-body">
        <div class="progress">
            <div class="progress-bar progress-bar-success" role="progressbar" style="width: {{winnerhome}}%;">
                {{winnerhome}}% {{hometeam}}
            </div>
            <div class="progress-bar progress-bar-info" role="progressbar" style="width: {{draw}}%;">
                {{draw}}% Draw
            </div>
            <div class="progress-bar progress-bar-warning" role="progressbar" style="width: {{winneraway}}%;">
                {{winneraway}}% {{awayteam}}
            </div>
        </div>
        <p>Average bet: <b>{{toFixed1 avghome}} : {{toFixed1 avgaway}}</b></p>
    </div>
    <table class="table">
        {{#if bets.correct}}
        <tr>
            <td class="col-md-1">{{> correct_bet}}</td>
            <td class="col-md-11">
            {{#each bets.correct}}{{#if @first}}{{else}},{{/if}} <a href="/user/{{id}}">{{name}}</a>{{/each}}
            </td>
        </tr>
        {{/if}}
        {{#if bets.diff}}
        <tr>
            <td class="col-md-1">{{> correct_diff}}</td>
            <td class="col-md-11">
            {{#each bets.diff}}{{#if @first}}{{else}},{{/if}} <a href="/user/{{id}}">{{name}}</a> {{goalsHome}}:{{goalsAway}}{{/each}}
            </td>
        </tr>
        {{/if}}
        {{#if bets.winner}}
        <tr>
            <td class="col-md-1">{{> correct_winner}}</td>
            <td class="col-md-11">
            {{#each bets.winner}}{{#if @first}}{{else}},{{/if}} <a href="/user/{{id}}">{{name}}</a> {{goalsHome}}:{{goalsAway}}{{/each}}
            </td>
        </tr>
        {{/if}}
        {{#if bets.wrong}}
        <tr>
            <td class="col-md-1">{{> wrong_bet}}</td>
            <td class="col-md-11">
            {{#each bets.wrong}}{{#if @first}}{{else}},{{/if}} <a href="/user/{{id}}">{{name}}</a> {{goalsHome}}:{{goalsAway}}{{/each}}
            </td>
        </tr>
        {{/if}}
    </table>
</div>
{{/each}}
{{else}}
<div class="alert alert-danger" role="alert">
    <strong>There are no past matches.</strong>
</div>
{{/if}}
</div>
{{/inline}}
{{/layout}}
