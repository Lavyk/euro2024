{{#> layout}}
{{#*inline "head"}}
<title>{{ t "mybets.title" }} - {{@websiteName}}</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container">

<a href="/mybets" class="btn btn-outline-secondary btn-sm mb-2">&larr; Back to My Bets</a>
<h2>{{ extraBet.name }}</h2>
<div class="alert alert-info">
    Choose <b>{{ extraBet.numberOfTeams }}</b> team(s) for <b>{{extraBet.name}}</b>.
    For every correct team you will receive <b>{{extraBet.scoreFactor}}</b> points.
</div>

<form class="extra_bet" method="post" action="/extra_bet/{{extraBet.id}}">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <input type="hidden" name="max_teams" value="{{extraBet.numberOfTeams}}">
    {{#each teams}}
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="1" id="team_{{id}}" name="team_{{id}}" {{#if isSelected}}checked{{/if}}>
        <label class="form-check-label" for="team_{{id}}">
            {{name}}
        </label>
    </div>
    {{/each}}
    <div class="alert alert-warning d-none mt-2 max-teams-warning">
        You are not allowed to select more than {{extraBet.numberOfTeams}} team(s).
    </div>
    <button type="submit" class="btn btn-primary mt-2 mb-2">Save</button>
</form>

</div>
{{/inline}}
{{#*inline "scripts"}}
<script type="text/javascript" src="/static/js/extra_bet.js"></script>
{{/inline}}
{{/layout}}
